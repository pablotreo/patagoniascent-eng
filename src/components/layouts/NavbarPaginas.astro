---
 
  <nav class="navbar navbar-expand-xl navbar-light">
    <div class="container-sm">
      <a class="navbar-brand" href="/" aria-label="home">
        <img class="" alt="patagoniascent" src="/img/paginas/logogris.png" width="150px" height="75px"></img>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav align-items-lg-center">
          {
            links.map((link) => (
            <li class="nav-item px-2">
              <a href={link.href} class="nav-link fs-6 fw-light" aria-label={link.name}>{link.name}</a>
            </li>
          )
          )}

        {redes.map((red) => (
              <li class="nav-item">
                <a href={red.href} class="nav-link contacto px-2 fs-6 fw-light" aria-label={red.nombre}>
                  {red.nombre}
                </a>
                <ul class="ul-redes nav">
                  {red.links.map((link) => (
                    <li class="nav-item"><a href={link.href} target="_blanck" class={link.class} aria-label={link.alt}/></li>
                    )
                  )}
                </ul>
              </li>
          )
        )}

          {logos.map((logo) => (
              <li class="nav-item">
                <a href={logo.href} target="_blanck" class="nav-link" aria-label={logo.alt}>
                  <img src={logo.img} alt={logo.alt} class="d-none d-lg-block" width="62px" height="64px" />
                </a>
              </li>
            )
          )}

        </ul>		  
      </div>
    </div>
  </nav>

  <style>
    .navbar {
      /* text-align: right; */
    }
    .contacto {
      position: relative;
    }
    .redes {
      font-size: 20px;
      padding: 5px!important;
      padding-top: 0px!important;
      color: rgb(88,88,90);
    }
    .ul-redes {
      position: absolute; 
      padding-left: 2px;
    }
    .ul-redes > a {
      display: inline-block;
    }
    
  </style>
