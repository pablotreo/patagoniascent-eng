  //   href: '/#crestonexperince',
  // },
  {
    name: 'CLIMBING',
    href: '/#climbing',
  },
  {
    name: 'SKIING',
    href: '/#skiing',
  },
  {
    name: 'COURSES',
    href: '/#courses',
  },
  // {
  //   name: 'CONTACT US',
  //   href: '/',
  //   isExternal: 'false',
  // },
]
const logos = [
  {
    img: '/img/paginas/aagmgris.png',
    href: 'https://www.aagm.com.ar/',
    alt: 'AAGM',
  },
  {
    img: '/img/paginas/uiagmgris.png',
