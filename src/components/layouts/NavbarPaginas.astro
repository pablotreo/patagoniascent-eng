        class: 'nav-link redes fab fa-facebook',
      },
      {
        alt: 'YouTube',
        href: 'https://www.youtube.com/channel/UCMqFsAQ6I0cjByx82SaIQRg',
        class: 'nav-link redes fab fa-youtube',
      },
      {
        alt: 'WhatsApp',
        href: 'https://wa.me/542966464845/',
        class: 'nav-link redes fab fa-whatsapp',
      },
    ],
  },
]
const links = [
  {
    name: 'ABOUT US',
    href: '/#aboutus',
  },
  {
    name: 'MOUNTAINEERING',
    href: '/#mountaineering',
  },
  // {
